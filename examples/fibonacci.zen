// Fibonacci in Zen â†’ transpiles to JavaScript
// Shows: recursion, pattern matching, string interpolation, loops

{ io } = @std

fibonacci = (n: i32) i32 {
    n <= 1 ?
        | true { return n }
        | false { return fibonacci(n - 1) + fibonacci(n - 2) }
}

main = () i32 {
    io.println("Fibonacci sequence:")
    i ::= 0
    loop i <= 10 {
        io.println("  fib(${i}) = ${fibonacci(i)}")
        i = i + 1
    }
    return 0
}
